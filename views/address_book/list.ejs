<%- include('./../parts/html-head') %>
<!--  -->
<%- include('./../parts/navbar') %>

<div class="container">
	<div class="row mt-3">
		<div class="col-lg-8">
			<nav aria-label="Page navigation example">
				<ul class="pagination">
					<li class="page-item <%= 1===page ? 'disabled' : '' %>">
						<a class="page-link" href="?<%= new URLSearchParams({...query,page: page-1}).toString() %>">
							<i class="fa-solid fa-circle-arrow-left"></i>
						</a>
					</li>
					<% for( let i = page - 5 ; i <= page + 5 ; i++ ) if( i >= 1 && i <= totalPages){ %>
					<li class="page-item <%= i===page ? 'active' : '' %>">
						<a class="page-link" href="?<%= new URLSearchParams({...query,page:i}).toString() %>"><%= i %></a>
					</li>
					<% } %>
					<li class="page-item <%= totalPages===page ? 'disabled' : '' %>">
						<a class="page-link" href="?<%= new URLSearchParams({...query,page: page+1}).toString() %>">
							<i class="fa-solid fa-circle-arrow-right"></i>
						</a>
					</li>
				</ul>
			</nav>
		</div>
		<div class="col-lg-4">
			<form class="form-inline my-2 my-lg-0 justify-content-end">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search" value="<%= search %>" />
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">姓名</th>
						<th scope="col">手機</th>
						<th scope="col">email</th>
						<th scope="col">生日</th>
						<th scope="col">地址</th>
					</tr>
				</thead>
				<tbody>
					<% for(let r of rows){ %>
					<tr>
						<td><%= r.sid %></td>
						<td><%= r.name %></td>
						<td><%= r.mobile %></td>
						<td><%= r.email %></td>
						<td><%= toDateString(r.birthday) %></td>
						<td><%= r.address %></td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%- include('./../parts/scripts') %>
<!--  -->
<%- include('./../parts/html-foot') %>
